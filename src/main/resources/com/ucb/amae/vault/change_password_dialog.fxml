<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ucb.amae.vault.views.ChangePasswordDialogController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Cambiar Contraseña Maestra" />
        <GridPane hgap="10" vgap="10">
            <children>
                <Label text="Contraseña actual:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                <PasswordField fx:id="currentPasswordField" promptText="Introduce tu contraseña actual" GridPane.rowIndex="0" GridPane.columnIndex="1" />
                
                <Label text="Nueva contraseña:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                <PasswordField fx:id="newPasswordField" promptText="Introduce la nueva contraseña" GridPane.rowIndex="1" GridPane.columnIndex="1" />
                
                <Label text="Confirmar contraseña:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                <PasswordField fx:id="confirmPasswordField" promptText="Confirma la nueva contraseña" GridPane.rowIndex="2" GridPane.columnIndex="1" />
            </children>
        </GridPane>
        <Label fx:id="statusLabel" minHeight="50.0" style="-fx-text-fill: red;" text="" wrapText="true" />
        <HBox alignment="CENTER" spacing="10.0">
            <children>
                <Button fx:id="saveButton" text="Guardar Cambios" defaultButton="true" />
                <Button fx:id="cancelButton" text="Cancelar" cancelButton="true" />
            </children>
        </HBox>
    </children>
</VBox>
