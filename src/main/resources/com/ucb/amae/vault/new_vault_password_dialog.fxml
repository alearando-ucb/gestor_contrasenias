<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ucb.amae.vault.views.NewVaultPasswordDialogController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Establecer Contraseña Maestra para Nueva Bóveda" />

        <GridPane hgap="10" vgap="10" alignment="CENTER">
            <Label text="Ruta de la Bóveda:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
            <Label fx:id="vaultPathLabel" text="[Ruta del archivo]" GridPane.rowIndex="0" GridPane.columnIndex="1" />

            <Label text="Contraseña Maestra:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
            <PasswordField fx:id="masterPasswordField" promptText="Introduce la contraseña maestra" GridPane.rowIndex="1" GridPane.columnIndex="1" />

            <Label text="Confirmar Contraseña:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
            <PasswordField fx:id="confirmPasswordField" promptText="Confirma la contraseña maestra" GridPane.rowIndex="2" GridPane.columnIndex="1" />
        </GridPane>

        <Label fx:id="statusLabel" style="-fx-text-fill: red;" text="" wrapText="true" minHeight="50.0" />

        <HBox alignment="CENTER" spacing="10">
            <Button fx:id="createVaultButton" text="Crear Bóveda" onAction="#handleCreateVault" />
            <Button fx:id="cancelButton" text="Cancelar" onAction="#handleCancel" />
        </HBox>
    </children>
</VBox>
